<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="AppVet.Views.Service"
       Title="Vet Serviço"
       Background="#C6EDF5">

    <Grid RowDefinitions="Auto, *">
        <!-- Duas linhas, uma fixa e uma que ocupa o restante do espaço -->

        <!-- Parte Fixa - Cabeçalho -->
        <StackLayout Grid.Row="0" Padding="5" Spacing="10">
            <Frame>
                <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, Auto, Auto">
                    <!-- Botão "Prev" -->
                    <Button Text="Prev"  Grid.Row="0" Grid.Column="0" WidthRequest="60" HorizontalOptions="Start"/>

                    <!-- Label central (mês e ano) -->
                    <Label Text="Outubro 2024" Padding="5" FontSize="20" TextColor="Black" Grid.Row="0" Grid.Column="1" HorizontalOptions="Start" />

                    <!-- Botão "Next" -->
                    <Button Text="Next" Grid.Row="0" Grid.Column="2" WidthRequest="60" HorizontalOptions="End"/>

                    <!-- Informações de Totais -->
                    <Label Text="Serviço Mês: " Padding="5" FontSize="15" TextColor="Black" Grid.Row="1" Grid.Column="0"/>
                    <Label Text="20" Padding="5" FontSize="15" TextColor="Black" Grid.Row="1" Grid.Column="2" HorizontalOptions="End"/>

                    <!-- Informações de Total -->
                    <Label Text="Total: " Padding="5" FontSize="15" TextColor="Black" Grid.Row="2" Grid.Column="0"/>
                    <Label Text="2.000,00" Padding="5" FontSize="15" TextColor="Black" Grid.Row="2" Grid.Column="2" HorizontalOptions="End"/>
                </Grid>
            </Frame>

            <ContentView>
                <Label Text="Ultimos Serviços" HorizontalOptions="Center" FontSize="20" FontAttributes="Bold" TextColor="#9880e5"/>
            </ContentView>
        </StackLayout>

