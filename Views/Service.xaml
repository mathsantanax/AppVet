                                                   Margin="0,0,10,0"
                                                   VerticalOptions="Center"
                                                   Aspect="AspectFill"/>

                        <!-- Nome do Pet -->
                        <Label Text="Marcos Paulo" 
                                                   FontSize="20" FontAttributes="Bold"
                                                   TextColor="Orange" 
                                                   Grid.Column="1" Grid.Row="0" />

                        <!-- Espécie do Pet -->
                        <Label Text="Jack Russel" 
                                                   FontSize="16"
                                                   TextColor="Gray"
                                                   Grid.Column="1" Grid.Row="1" />

                        <!-- Nome do Tutor -->
                        <Label Text="Tutor: João Silva" 
